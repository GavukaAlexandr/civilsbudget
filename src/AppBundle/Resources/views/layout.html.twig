{% extends "::base.html.twig" %}

{% block body %}

    {{ block("header") }}

    <main id="main-wrap">
        <div class="container">
            {{ block("flash") }}
            {{ block("content") }}
        </div>
    </main>
    {{ block("footer") }}
    <div id="login-modal" class="modal fade">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Авторизація</h4>
                </div>
                <div class="modal-body">
                    {#{{ render(url('login_included')) }}#}
                    <hr/>
                    <a href="{{ login_url }}"><img src="{{ asset('images/bank-id.png') }}" alt="BankID" /></a>
                </div>
            </div>
        </div>
    </div>
{% endblock body %}

{% block content %}
{% endblock content %}

{% block footer %}
    <footer id="main-footer">
        <div class="container main-block">
            <div class="row">
                <div class="col-md-4 copyright">
                    <span>&copy; 2015</span>
                    <a href="{{ path("rada_about") }}">Про программу</a>
                    <a href="{{ path("rada_developerss") }}">Розробники</a>

                </div>
                <div class="col-md-4 text-center icon-wrap">
                    <a href="#" class="icon-4"></a>
                    <a href="#" class="icon-3"></a>
                    <a href="#" class="icon-2"></a>
                    <a href="#" class="icon-1"></a>
                </div>
                <div class="col-md-4 footer-social">
                    <a href="https://www.facebook.com/civilscouncil" class="icon-facebook"></a>
                    <a href="https://vk.com/civilscouncil" class="icon-vk"></a>
                </div>
            </div>
        </div>
    </footer>
{% endblock footer %}

{% block menu %}
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a href="{{ path("homepage") }}" class="navbar-brand">Лого</a>
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse" id="navbar-main">
                <ul class="nav navbar-nav">
                    {#{{ dump(is_granted('ROLE_USER'), is_granted('ROLE_ADMIN')) }}#}
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li>
                        {% if app.user %}
                            <a href="{{ path('logout') }}">Вихід</a>
                        {% elseif app.request.get('_route') != 'login' %}
                            <a href="" data-toggle="modal" data-target="#login-modal">Увійти</a>
                        {% endif %}
                    </li>
                </ul>

            </div>
        </div>
    </div>

{% endblock menu %}

