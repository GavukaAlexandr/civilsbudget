{% extends '@App/layout.html.twig' %}

{% block content %}
        <div class="info_project">
            {{ project.description }}
        </div>
        {{ block("navproject") }}

{% endblock %}

{% block header %}
    <div class="fb-profile">
        <div class="image_project">
            <h2 class="title_project">{{ block('title') }}</h2>
            <img align="left" class="fb-image-lg" src="http://lorempixel.com/555/300/sports" alt="Profile image example"/>
        </div>
        <div class="fb-image-profile thumbnail">
            <div class="border_tumbnail">
                <img data-src="holder.js/150x150" alt="150x150" src="data:image/svg+xml;base64," data-holder-rendered="true">
                {#<img align="left" class=" " src="http://lorempixel.com/150/150/sports" alt="Profile image example"/>#}
            </div>

        </div>
        <div class="fb-profile-text">
            <h1>{{ project.owner.fullName }}</h1>
        </div>
    </div>
{% endblock header %}

{% block title %}
    {{ project.title|humanize }}
{% endblock title %}

{% block navproject %}
    <div class="nav_project">
        <ul class="nav nav-pills">
            <li><span>Created on: <span class="badge">{{ project.createAt|date('d-m-Y') }}</span></span></li>
            <li>
                <span>Likes: <span class="badge">10 000</span></span>
            </li>
            <li>
                <span>
                    Source: <a href="{{ project.source }}" class="badge">{{ project.source|regexUrl }}</a>
                </span>
            </li>
            <li>
                <button class="btn btn-info read_more">Підтримати</button>
            </li>

        </ul>
    </div>
{% endblock navproject %}
