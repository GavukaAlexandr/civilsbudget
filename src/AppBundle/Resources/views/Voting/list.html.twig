{% extends "@App/layout.html.twig" %}

{% block title %}
    Проекти
{% endblock title %}

{% block herosection %}

    {% if voteSetting %}
        {% if voteSetting.backgroundImg  %}
            {% set backgroundImg = asset(voteSetting.backgroundImg) %}
        {% else %}
            {% set backgroundImg = asset('bundles/app/img/default_bg.png') %}
        {% endif %}

        {% if voteSetting.logo  %}
            {% set logo = asset(voteSetting.logo) %}
        {% else %}
            {% set logo = asset('') %}
        {% endif %}
    {% else %}
        {#default img#}
        {% set backgroundImg = asset('bundles/app/img/default_bg.png') %}
        {% set logo = asset('') %}
    {% endif %}

    <div class="hero-section" style="background:url('{{ backgroundImg }}') top left/cover #ffffff">

        <div class="hero-shadow">
            <div class="container">
                <div id="hp-logo" style="background:url('{{ logo }}') no-repeat"></div>
                {#background: url(../images/logo.png) no-repeat;#}
                <div class="hp-text">
                    <h1 id="hp-title">
                        {% if voteSetting %}
                            <p>{{ voteSetting.titleH1|nl2br }}</p>
                            Голосування відкрито до
                            {{ voteSetting.dateTo|date("d.m.Y") }}
                        {% else %}
                            <p>виріши долю громадського бюджету свого міста</p>
                            {% if voteCity %}
                                {% for city in voteCity %}
                                    <a href="{{ path("homepage") }}?city={{ city['city'] }}" style="color: oldlace">{{ city['city'] }}</a><br>
                                {% endfor %}
                            {% endif %}
                        {% endif %}
                        <hr>
                    </h1>
                    <div id="hp-voted">
                        <span class="voted-title">Вже підтримано проектів {% if voteSetting %} {{ voteSetting.location.city }} {% endif %}</span><br>
                        {#{% set votes = 0 %}#}
                        {#{% for project in projects %}#}
                        {#{% set votes = votes + project['countLikes']|number_format(0, '.', ' ') %}#}
                        {#{% endfor %}#}
                        {% set digitsAllDigit = countVoted + countAdminVoted %}
                        {% set digits = countVoted|split('') %}
                        {% set digitsAdmin = countAdminVoted|split('') %}
                        {% set digitsAll = digitsAllDigit|split('') %}
                        <span class="voted-title">онлайн:</span>
                        <div class="counter">
                            {% for digit in digits %}
                                <span class="digit">
                                    <span title="{{ digit }}">{{ digit }}</span>
                                </span>
                            {% endfor %}
                        </div>
                        <br>
                        <span class="voted-title">офлайн:</span>
                        <div class="counter">
                            {% for digit in digitsAdmin %}
                                <span class="digit">
                                    <span title="{{ digit }}">{{ digit }}</span>
                                </span>
                            {% endfor %}
                        </div>
                        <br>
                        <span class="voted-title">всього:</span>
                        <div class="counter">
                            {% for digit in digitsAll %}
                                <span class="digit">
                                    <span title="{{ digit }}">{{ digit }}</span>
                                </span>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock herosection %}
{% block content %}
    {% for voting in votings %}
        <div class="col-md-4  item-content">
            <div class="wrap-item">
                <div class="card" id="project{{ voting.id }}">
                    <div class="card-image">
                        <a href="{{ path('projects_list', { id: voting.id })  }}" class="img-lnk">
                            <img src="{{ asset(voting.logo) }}" class="img-responsive" alt="" style="margin: 0 auto;">
                        </a>
                    </div><!-- card image -->

                    <div class="card-content">
                        <h2 class="item-title"><strong>{{ voting.title|humanize }}
                                {% if voting.dateTo < date() %}
                                    (архів)
                                {% endif %}
                            </strong>
                            <div>
                                {{ voting.location|capitalize }}
                            </div>
                        </h2>
                    </div><!-- card content -->
                    <div class="item-excerpt">
                        <span>{{ voting.titleH1 | capitalize }}</span>
                        {#<button type="button" class="btn btn-custom pull-right cards desc-btn" aria-label="Left Align" data-value="project{{ project[0].id }}">#}
                        {#<i class="fa fa-ellipsis-v" data-value="project{{ project[0].id }}"></i>#}
                        {#</button>#}
                    </div><!-- card actions -->
                    <div class="item-meta">
                        <div>Підтримало: <span class="pull-right">{{ voting.voted|number_format(0, '.', ' ') }}</span></div>
                        <div>Дата початку: <span class="pull-right">{{ voting.dateFrom|date("d.m.Y") }}</span></div>
                        <div>Дата закінчення: <span class="pull-right">{{ voting.dateTo|date("d.m.Y") }}</span></div>
                        {#<div>Бюджет: <span>{{ project[0].charge|number_format(0, '.', ' ') }}</span> грн.</div>#}
                    </div>
                    {#<div class="card-reveal">#}
                    {#<span class="card-title">{{ project[0].title }}</span> <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>#}
                    {#<p>#}
                    {#{{ project[0].description }}#}
                    {#</p>#}
                    {#</div><!-- card reveal -->#}
                    <a href="{{ path('projects_list', { id: voting.id }) }}" class="detail-btn">детальніше</a>
                </div>
            </div>
        </div>

    {% endfor %}

{% endblock content %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/project_list.js') }}"></script>
    <script src="{{ asset('js/app_notification.js') }}"></script>
{% endblock %}