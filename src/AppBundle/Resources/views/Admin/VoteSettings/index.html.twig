{% extends "@App/Admin/layout.html.twig" %}

{% block content %}
    <h1>VoteSettings list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Votelimits</th>
                <th>Location</th>
                <th>dateFrom</th>
                <th>dateTo</th>
                <th>description</th>
                <th>logo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('vote_settings_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.voteLimits }}</td>
                <td>{{ entity.location }}</td>

                <td>{{ entity.dateFrom|date("m/d/Y") }}</td>
                <td>{{ entity.dateTo|date("m/d/Y") }}</td>
                <td>{{ entity.description|slice(1, 50) }}</td>

                <td><img src="{{ asset(entity.logo) }}"></td>

                <td>
                <ul>
                    <li>
                        <a href="{{ path('vote_settings_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('vote_settings_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('vote_settings_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
